{
  "version": 2,
  "builds": [
    {
      "src": "project/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/project/dist/assets/$1"
    },
    {
      "src": "/",
      "dest": "/project/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/project/dist/index.html"
    }
  ]
}
