# Backend Configuration
PORT=3001

# Gmail Configuration
GMAIL_USER=your-gmail-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# Environment Settings
# Use 'production' for Vercel deployment
NODE_ENV=production

# OpenAI Configuration - securely stored on backend only
OPENAI_API_KEY=REPLACE_WITH_YOUR_API_KEY_WITHOUT_PREFIX
OPENAI_MODEL=gpt-4o

# Frontend Configuration (These should be added to Vercel too)
VITE_APP_NAME=Anosh Demo
VITE_APP_VERSION=1.0.0
VITE_STORAGE_PREFIX=anosh_demo
VITE_DEBUG_MODE=false
VITE_DEFAULT_THEME=light
VITE_ENABLE_ANIMATIONS=true
VITE_MAX_MESSAGE_LENGTH=2000
VITE_TYPING_DELAY_MIN=500
VITE_TYPING_DELAY_MAX=2000
VITE_ENABLE_REAL_AI=true
VITE_OPENAI_MODEL=gpt-4o

