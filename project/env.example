# Demo Configuration (No Long-term Storage)
# Copy this file to .env and modify as needed

# App Configuration
VITE_APP_NAME=Anosh Demo
VITE_APP_VERSION=1.0.0

# Demo Settings
VITE_STORAGE_PREFIX=anosh_demo
VITE_DEBUG_MODE=false

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_ANIMATIONS=true

# Chat Configuration
VITE_MAX_MESSAGE_LENGTH=2000
VITE_TYPING_DELAY_MIN=500
VITE_TYPING_DELAY_MAX=2000

# Email Configuration (for access code delivery)
VITE_GMAIL_APP_PASSWORD=your-gmail-app-password-here

# Optional: Real AI Integration (for future use)
# VITE_OPENAI_API_KEY=your-openai-api-key-here
# VITE_OPENAI_MODEL=gpt-4
# VITE_ENABLE_REAL_AI=false 